{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Knowledge Graph TOML Schema",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "version": {
            "type": "number"
        },
        "node": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                    "type": "object",
                    "properties": {
                        "node_description": {
                            "type": "string"
                        },
                        "node_properties": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    },
                                    "optional": {
                                        "type": "boolean"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "name",
                                    "type",
                                    "optional",
                                    "description"
                                ]
                            }
                        }
                    },
                    "required": [
                        "node_description"
                    ]
                }
            },
            "additionalProperties": false
        },
        "relation": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                    "type": "object",
                    "properties": {
                        "relation_description": {
                            "type": "string"
                        },
                        "from_entity": {
                            "type": "string"
                        },
                        "to_entity": {
                            "type": "string"
                        },
                        "relation_properties": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    },
                                    "optional": {
                                        "type": "boolean"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "name",
                                    "type",
                                    "optional",
                                    "description"
                                ]
                            }
                        }
                    },
                    "required": [
                        "relation_description",
                        "from_entity",
                        "to_entity"
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "title",
        "version"
    ]
}