{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Knowledge Graph TOML Schema",
  "description": "Schema for defining nodes and relations in a knowledge graph using TOML format.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the schema document."
    },
    "version": {
      "type": "number",
      "description": "Version number of the schema."
    },
    "node": {
      "type": "object",
      "description": "Definitions of node labels and their properties.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "node_description": {
            "type": "string",
            "description": "Textual description of the node label."
          },
          "node_properties": {
            "type": "array",
            "description": "List of properties associated with this node label.",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the property."
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "string",
                    "integer",
                    "floating",
                    "boolean",
                    "datetime"
                  ],
                  "description": "Data type of the property. Must be one of: string, integer, floating, boolean, datetime."
                },
                "optional": {
                  "type": "boolean",
                  "description": "Indicates whether the property is optional."
                },
                "description": {
                  "type": "string",
                  "description": "Description of the property."
                }
              },
              "required": [
                "name",
                "type",
                "optional"
              ]
            }
          }
        },
        "required": [
          "node_description",
          "node_properties"
        ]
      }
    },
    "relation": {
      "type": "object",
      "description": "Definitions of relation types and their properties.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "relation_description": {
            "type": "string",
            "description": "Textual description of the relation."
          },
          "from_entity": {
            "type": "string",
            "description": "Label of the source node in the relation."
          },
          "to_entity": {
            "type": "string",
            "description": "Label of the target node in the relation."
          },
          "relation_properties": {
            "type": "array",
            "description": "List of properties associated with this relation.",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the relation property."
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "string",
                    "integer",
                    "floating",
                    "boolean",
                    "datetime"
                  ],
                  "description": "Data type of the relation property. Must be one of: string, integer, floating, boolean, datetime."
                },
                "optional": {
                  "type": "boolean",
                  "description": "Indicates whether the relation property is optional."
                },
                "description": {
                  "type": "string",
                  "description": "Description of the relation property."
                }
              },
              "required": [
                "name",
                "type",
                "optional"
              ]
            }
          }
        },
        "required": [
          "relation_description",
          "from_entity",
          "to_entity",
          "relation_properties"
        ]
      }
    }
  },
  "required": [
    "title",
    "version",
    "node",
    "relation"
  ]
}