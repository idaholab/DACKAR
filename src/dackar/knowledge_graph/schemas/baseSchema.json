{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Knowledge Graph TOML Schema",
  "description": "Schema for defining nodes and relations in a knowledge graph using TOML format.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the schema document."
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$",
      "description": "Schema version (e.g., 1.0 or 1.0.0)."
    },
    "node": {
      "type": "object",
      "description": "Definitions of node labels and their properties.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "node_description": {
            "type": "string",
            "description": "Textual description of the node label."
          },
          "node_properties": {
            "type": "array",
            "description": "List of properties associated with this node label.",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "string",
                    "integer",
                    "floating",
                    "boolean",
                    "datetime",
                    "enum"
                  ]
                },
                "optional": {
                  "type": "boolean"
                },
                "description": {
                  "type": "string"
                },
                "enum_values": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "description": "Allowed values if type is enum."
                }
              },
              "required": [
                "name",
                "type",
                "optional"
              ],
              "if": {
                "properties": {
                  "type": {
                    "const": "enum"
                  }
                }
              },
              "then": {
                "required": [
                  "enum_values"
                ]
              },
              "else": {
                "not": {
                  "required": [
                    "enum_values"
                  ]
                }
              }
            }
          }
        },
        "required": [
          "node_description"
        ]
      }
    },
    "relation": {
      "type": "object",
      "description": "Definitions of relation types and their properties.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "relation_description": {
            "type": "string"
          },
          "from_node": {
            "type": "string"
          },
          "to_node": {
            "type": "string"
          },
          "relation_properties": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "string",
                    "integer",
                    "floating",
                    "boolean",
                    "datetime",
                    "enum"
                  ]
                },
                "optional": {
                  "type": "boolean"
                },
                "description": {
                  "type": "string"
                },
                "enum_values": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "description": "Allowed values if type is enum."
                }
              },
              "required": [
                "name",
                "type",
                "optional"
              ],
              "if": {
                "properties": {
                  "type": {
                    "const": "enum"
                  }
                }
              },
              "then": {
                "required": [
                  "enum_values"
                ]
              },
              "else": {
                "not": {
                  "required": [
                    "enum_values"
                  ]
                }
              }
            }
          }
        },
        "required": [
          "relation_description",
          "from_node",
          "to_node"
        ]
      }
    }
  },
  "required": [
    "title",
    "version"
  ]
}